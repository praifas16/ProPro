async function submitComment(postId, commentText) {
    if (commentText === "" && attachedCommentFileURL === "") {
        alert("Message or attachment is required.");
        return;
    }

    const commentData = {
        PostId: postId, // ระบุ postID
        Username: window.username,
        Email: window.email,
        CommentText: commentText,
        Timestamp: firebase.firestore.FieldValue.serverTimestamp(),
        FileType: attachedCommentFileType,
        FileURL: attachedCommentFileURL
    };

    try {
        // บันทึกคอมเม้นต์ลง Firestore
        await db.collection("Comments").add(commentData);
        alert("Comment submitted successfully!");
        attachedCommentFileURL = "";
        attachedCommentFileType = "";
                document.querySelector('.comment-input').value = "";
        document.getElementById('commentImageContainer').innerHTML = "";

        // สร้างการแจ้งเตือนให้สมาชิกในห้องเรียนทุกคน
        const subjectDoc = await db.collection("Subjects").doc(classroomName).get();
        const subjectData = subjectDoc.data();

        if (subjectData && subjectData.Members) {
            const members = subjectData.Members;

            for (const memberEmail of members) {
                if (memberEmail !== window.email) { // ไม่แจ้งเตือนตัวเอง
                    await db.collection("Notifications").add({
                        To: memberEmail,
                        Message: `${window.username} ได้คอมเม้นต์ในโพสต์ในห้องเรียน ${classroomName}`,
                        Type: "Comment",
                        ClassroomName: classroomName,
                        PostId: postId,
                        CreatedAt: firebase.firestore.FieldValue.serverTimestamp(),
                        isRead: false,
                    });
                }
            }
        }

        alert("Comment submitted successfully and notifications sent!");
        attachedCommentFileURL = ""; // ล้างข้อมูลไฟล์หลังส่งคอมเม้นต์สำเร็จ
        attachedCommentFileType = "";
        document.querySelector('.comment-input').value = "";
        document.getElementById('commentImageContainer').innerHTML = "";
        document.getElementById('commentFileContainer').style.display = 'none';

        // รีเฟรชหน้าเว็บหลังจากกดตกลงใน alert
        setTimeout(() => {
            location.reload();
        }, 300);

    } catch (error) {
        console.error("Error submitting comment or sending notifications: ", error);
    }
}
